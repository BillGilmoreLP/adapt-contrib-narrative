<div class="narrative component-inner" role="region" aria-label="{{_globals._components._narrative.ariaRegion}}">
    {{> component this}}
    <div class="narrative__widget component-widget {{#if _hasNavigationInTextArea}}narrative__text-controls{{/if}}">

        <div class="narrative__content">
            <div class="narrative__content-inner">
                {{#each _items}}
                <div class="narrative__content-item {{#if _isVisited}}visited{{/if}}" data-index="{{@index}}">
                    {{#if _graphic.alt}}{{{a11y_aria_label _graphic.alt}}}{{/if}}
                    <div class="narrative__content-title">
                        <div class="narrative__content-title-inner h5" role="heading" aria-level="5" tabindex="0">
                            {{{title}}}
                        </div>
                    </div>
                    <div class="narrative__content-body">
                        <div class="narrative__content-body-inner">
                            {{{a11y_text body}}}
                        </div>
                    </div>
                </div>
                {{/each}}
                <div class="narrative__controls-container clearfix">
                    <div class="narrative__indicators">
                        {{#each _items}}
                        <div class="narrative__progress component-item-color component-item-border {{#if _isVisited}}visited{{/if}}" data-index="{{@index}}"></div>
                        {{/each}}
                    </div>
                    <button class="base narrative__controls narrative__controls--left" role="button" aria-label="{{_globals._accessibility._ariaLabels.previous}}">
                        <div class="icon icon-controls-left"></div>
                    </button>
                    <button class="base narrative__controls narrative__controls--right" role="button" aria-label="{{_globals._accessibility._ariaLabels.next}}">
                        <div class="icon icon-controls-right"></div>
                    </button>
                </div>
            </div>
        </div>

        <div class="narrative__strapline">
            <div class="narrative__strapline-header">
                <div class="narrative__strapline-header-inner clearfix" style="width: {{_totalWidth}}%">
                    <div></div>
                    {{#each _items}}
                    <button role="button" class="base narrative__strapline-title {{#if _isVisited}}visited{{/if}}" aria-label="{{{strapline}}}" style="width: {{../_itemWidth}}%" data-index="{{@index}}">
                        <div class="narrative__strapline-title-inner h5">
                            {{{strapline}}}
                        </div>
                        <div class="icon icon-plus"></div>
                        <div class="focus-rect"></div>
                    </button>
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="narrative__slide-container">

            <button class="base narrative__controls narrative__controls--left" role="button" aria-label="{{_globals._accessibility._ariaLabels.previous}}">
                <div class="icon icon-controls-left"></div>
            </button>
            <button class="base narrative__controls narrative__controls--right" role="button" aria-label="{{_globals._accessibility._ariaLabels.next}}">
                <div class="icon icon-controls-right"></div>
            </button>

            <div class="narrative__slider clearfix" style="width: {{_totalWidth}}%">
                {{#each _items}}
                <div class="narrative__slider-graphic {{#if _isVisited}}visited{{/if}}" style="width: {{../_itemWidth}}%" data-index="{{@index}}">
                    <img src="{{_graphic.src}}" />
                    {{#if _graphic.attribution}}
                        <div class="graphic-attribution">{{{_graphic.attribution}}}</div>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            <div class="narrative__indicators">
                {{#each _items}}
                <div class="narrative__progress component-item-color component-item-border {{#if _isVisited}}visited{{/if}}" data-index="{{@index}}"></div>
                {{/each}}
            </div>
        </div>

        <div class="clearfix"></div>

    </div>
</div>